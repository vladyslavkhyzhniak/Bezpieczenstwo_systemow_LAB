<div class="container">
    <h1 class="text-center">Szyfr Cezara</h1>
    <div class="row justify-content-center">
        <div class="col-md-10">
            <form action="Result" method="GET">
                <div class="form-group">
                    <label for="tekst">Wpisz tekst:</label>
                    <textarea type="" class="form-control w-100" id="tekst" rows="10" name="text"></textarea>
                </div>
                <div class="form-group">
                    <label for="klucz">Klucz:</label>
                    <input type="number" class="form-control mb-0" id="klucz" value="3" name="step">
                    <small class="form-text mt-0 text-muted">0 - brak przesunięcia</small>
                </div>
                <button type="submit" value="Encrypt" name="method" class="btn btn-primary">Zaszyfruj</button>
                <button type="submit" value="Decrypt" name="method" class="btn btn-secondary">Odszyfruj</button>
            </form>

        </div>
    </div>
</div>